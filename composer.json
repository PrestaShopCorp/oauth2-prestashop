{
    "name": "prestashopcorp/oauth2-prestashop",
    "description": "PrestaShop OAuth 2.0 support for the PHP League's OAuth 2.0 Client",
    "type": "library",
    "license": "MIT",
    "author": "PrestaShop",
    "authors": [
        {
            "name": "PrestaShop SA",
            "email": "contact@prestashop.com"
        }
    ],
    "keywords": [
        "php",
        "prestashop",
        "api",
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authentication"
    ],
    "require": {
        "php": "^7.2|^8.0",
        "league/oauth2-client": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^9.0"
    },
    "autoload": {
        "psr-4": {
            "PrestaShopCorp\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PrestaShopCorp\\OAuth2\\Client\\Test\\": "tests/src/"
        }
    }
}
